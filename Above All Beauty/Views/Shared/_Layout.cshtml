<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="http://maps.googleapis.com/maps/api/js"></script>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,700|Ubuntu:400,700|Inconsolata:400,700|Lobster|Yanone+Kaffeesatz:400,700|Alegreya+Sans:400,700|Poiret+One|Pacifico|Candal|Karla:400,700|Dancing+Script:400,700|Yellowtail|Abril+Fatface|Comfortaa|Lobster+Two:400,700|Source+Sans+Pro|Raleway:400,700|PT+Sans:400,700|Lora:400,700|Open+Sans+Condensed:300,700|Arimo|PT+Sans+Narrow|Playfair+Display:400,700|Quicksand:400,700' rel='stylesheet' type='text/css'>


</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle navbar-fixed-bottom " data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home/Index"><img src="~/Images/logo.png" id="logo" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right ">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Upcoming Events", "Upcoming", "Home")</li>
                </ul>
            </div>
        </div>
    </header>

    <section id="body">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Above All Beauty Pageant | All Rights Reserved </p>
        </footer>
    </section>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
